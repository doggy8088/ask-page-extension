{
  "manifest_version": 3,
  "name": "頁問 AskPage",
  "version": "0.8.0",
  "description": "使用 Gemini API 詢問關於目前頁面的問題",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "lib/marked.min.js",
        "lib/purify.min.js",
        "content.js"
      ],
      "css": ["style.css"]
    }
  ],
  "commands": {
    "toggle-dialog": {
      "suggested_key": {
      "default": "Ctrl+Alt+Shift+I",
      "mac": "MacCtrl+Alt+Shift+I"
      },
      "description": "Open AskPage dialog"
    },
    "switch-provider": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "MacCtrl+Shift+P"
      },
      "description": "Switch AI provider"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/marked.min.js",
        "lib/purify.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
